{
  "manifest_version": 2,
  "name": "Nkọwa okwu",
  "version": "0.1",
  "permissions": [
    "storage",
    "https://www.google.com/",
    "activeTab",
    "contextMenus"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Nkọwa okwu",
      "keyword": "@test",
      "search_url": "https://nkowaokwu.com/search?word={searchTerms}"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/browser-polyfill.js",
        "scripts/dictionary.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "scripts/browser-polyfill.js",
      "scripts/shortcut.js",
      "scripts/wordsearch.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon32.png"
  }
}